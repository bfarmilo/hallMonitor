{
    "name": "Network Timestamps",
    "version": "1.0",
    "description": "Adding timestamps to network calls to sync with video and EME logger",
    "devtools_page": "devtools.html",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action":{
        "default_title":"Show network accesses",
        "default_icon": "toast.png",
        "default_popup": "panel.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*",
        "https://*/*",
        "clipboardWrite",
        "pageCapture"
    ],
    "manifest_version": 2
}